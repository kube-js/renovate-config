{
  "name": "@kube-js/renovate-config",
  "version": "0.0.0-development",
  "description": "A package containing kube-js' configs for renovate",
  "repository": {
    "type": "git",
    "url": "https://github.com/kube-js/renovate-config"
  },
  "main": "index.js",
  "scripts": {
    "semantic-release": "semantic-release-public-circleci-lib"
  },
  "author": "Mariusz Rajczakowski <mariuszrajczakowski@pm.me> (http://mariuszrajczakowski.me)",
  "license": "MIT",
  "renovate-config": {
    "webapp": {
      "extends": [
        "config:js-app"
      ],
      "rangeStrategy": "replace",
      "automerge": true,
      "automergeType": "branch-push",
      "major": {
        "automerge": false
      },
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
          "before 5am on every weekday"
        ]
      }
    },
    "lib": {
      "extends": [
        "config:js-lib"
      ],
      "rangeStrategy": "replace",
      "automerge": true,
      "automergeType": "branch-push",
      "major": {
        "automerge": false
      },
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
          "before 5am on every weekday"
        ]
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@kube-js/semantic-release": "1.0.3"
  }
}
